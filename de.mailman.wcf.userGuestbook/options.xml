<?xml version="1.0"?>
<!DOCTYPE data SYSTEM "http://www.woltlab.com/DTD/options.dtd">
<data>
	<import>
		<categories>
			<category name="userGuestbook"></category>
			<category name="userGuestbook.general">
				<parent>userGuestbook</parent>
			</category>
		</categories>

		<options>
			<option name="userGuestbook_itemsPerPage">
				<categoryname>userGuestbook.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>10</defaultvalue>
			</option>
			<option name="userGuestbook_post_maxlength">
				<categoryname>userGuestbook.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>3000</defaultvalue>
			</option>
			<option name="userGuestbook_showEntryImages">
				<categoryname>userGuestbook.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="userGuestbook_showReplyLink">
				<categoryname>userGuestbook.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="userGuestbook_showGuestbookLink">
				<categoryname>userGuestbook.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>

			<option name="userGuestbook_pmNotifierUgrp">
				<categoryname>userGuestbook.general</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
			</option>
			<option name="userGuestbook_pmNotifierUser">
				<categoryname>userGuestbook.general</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
			</option>

			<option name="userGuestbook_showInSidebar">
				<categoryname>thread.posts</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
		</options>
	</import>
</data>
