<?xml version="1.0"?>
<!DOCTYPE data SYSTEM "http://www.woltlab.com/DTD/options.dtd">
<data>
	<import>
		<categories>
			<category name="message.attachmentManager">
				<parent>message</parent>
				<showorder>3</showorder>
			</category>
		</categories>
		<options>
			<option name="attachmentManager_sortField">
				<categoryname>message.attachmentManager</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>uploadTime</defaultvalue>
				<selectoptions><![CDATA[messageType:wcf.acp.option.attachmentManager_sortField.messageType
fileType:wcf.acp.option.attachmentManager_sortField.fileType
attachmentName:wcf.acp.option.attachmentManager_sortField.attachmentName
attachmentSize:wcf.acp.option.attachmentManager_sortField.attachmentSize
downloads:wcf.acp.option.attachmentManager_sortField.downloads
lastDownloadTime:wcf.acp.option.attachmentManager_sortField.lastDownloadTime
uploadTime:wcf.acp.option.attachmentManager_sortField.uploadTime]]></selectoptions>
		    </option>

			<option name="attachmentManager_sortOrder">
				<categoryname>message.attachmentManager</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>ASC</defaultvalue>
				<selectoptions><![CDATA[ASC:wcf.acp.option.attachmentManager_sortOrder.asc
DESC:wcf.acp.option.attachmentManager_sortOrder.desc]]></selectoptions>
		    </option>

			<option name="attachmentManager_targetWindow">
				<categoryname>message.attachmentManager</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>_blank</defaultvalue>
				<selectoptions><![CDATA[_blank:wcf.acp.option.attachmentManager_targetWindow._blank
_self:wcf.acp.option.attachmentManager_targetWindow._self]]></selectoptions>
		    </option>

			<option name="attachmentManager_scaling">
				<categoryname>message.attachmentManager</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue><![CDATA[1]]></defaultvalue>
			</option>
			<option name="attachmentManager_maxLengthUcp">
				<categoryname>message.attachmentManager</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="attachmentManager_maxLengthAcp">
				<categoryname>message.attachmentManager</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>20</defaultvalue>
			</option>
			<option name="attachmentManager_itemsPerPage">
				<categoryname>message.attachmentManager</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>20</defaultvalue>
			</option>
		</options>
	</import>
</data>
