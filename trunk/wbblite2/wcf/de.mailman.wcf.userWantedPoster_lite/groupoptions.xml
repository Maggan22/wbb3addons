<?xml version="1.0"?>
<!DOCTYPE data SYSTEM "http://www.woltlab.com/DTDs/options.dtd">
<data>	
	<import>
		<categories>
			<category name="user.wantedPoster">
				<parent>user</parent>
				<showorder>10</showorder>
			</category>
            <category name="user.wantedPoster.listView">
	            <parent>user.wantedPoster</parent>
            </category>

            <category name="admin.general.wantedPoster">
	            <parent>admin.general</parent>
            </category>

			<category name="mod.wantedPoster">
				<parent>mod</parent>
				<showorder>10</showorder>
			</category>
		</categories>

		<options>
			<option name="user.wantedPoster.canViewWantedPoster">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<enableoptions>user.wantedPoster.canViewHeaderMenu,user.wantedPoster.canUseWantedPoster</enableoptions>
			</option>
			<option name="user.wantedPoster.canViewHeaderMenu">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>

			<option name="user.wantedPoster.canUseWantedPoster">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<enableoptions>user.wantedPoster.maxLength,user.wantedPoster.canUseSmilies,user.wantedPoster.canUseBBCodes,user.wantedPoster.canUseHtml,user.wantedPoster.canUploadAttachment</enableoptions>
			</option>
			<option name="user.wantedPoster.maxLength">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.canUseSmilies">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.canUseBBCodes">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.canUseHtml">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>

			<option name="user.wantedPoster.canUploadAttachment">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<enableoptions>user.wantedPoster.maxAttachmentSize,user.wantedPoster.maxAttachmentCount</enableoptions>
			</option>
			<option name="user.wantedPoster.maxAttachmentSize">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.maxAttachmentCount">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.allowedAttachmentExtensions">
				<categoryname>user.wantedPoster</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue><![CDATA[7z
bmp
bz
bz2
cpp
gif
gz
img
jpeg
jpg
pdf
png
rar
tar
tgz
txt
xml
zip]]></defaultvalue>
			</option>

			<option name="user.wantedPoster.listView.showAvatar">
				<categoryname>user.wantedPoster.listView</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.listView.showCreateDate">
				<categoryname>user.wantedPoster.listView</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.listView.showModDate">
				<categoryname>user.wantedPoster.listView</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.listView.showBytes">
				<categoryname>user.wantedPoster.listView</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.listView.showAttachments">
				<categoryname>user.wantedPoster.listView</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.wantedPoster.listView.showViews">
				<categoryname>user.wantedPoster.listView</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>

			<option name="mod.wantedPoster.canLockEntries">
				<categoryname>mod.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="mod.wantedPoster.canModifyEntries">
				<categoryname>mod.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="mod.wantedPoster.canDeleteEntries">
				<categoryname>mod.wantedPoster</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>

			<option name="admin.general.wantedPoster.canEdit">
				<categoryname>admin.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
		</options>
	</import>
</data>
