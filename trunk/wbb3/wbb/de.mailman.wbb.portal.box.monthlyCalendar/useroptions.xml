<?xml version="1.0"?>
<!DOCTYPE data SYSTEM "http://www.woltlab.com/DTD/options.dtd">
<!-- $Id$ -->
<data>
	<import>
		<categories>
			<category name="settings.display.monthlyCalendarBox">
				<parent>settings.display</parent>
				<showorder>0</showorder>
			</category>
		</categories>
		<options>
			<option name="monthlyCalendarBox">
				<categoryname>hidden</categoryname>
				<optiontype>boolean</optiontype>
				<visible>4</visible>
				<editable>4</editable>
				<defaultvalue>1</defaultvalue>
			</option>

			<option name="monthlyCalendarBox_showCalendarWeeks">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="monthlyCalendarBox_showAppointmentsInCalendar">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="monthlyCalendarBox_showAppointments">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>monthlyCalendarBox_showAppointmentsAsDefault,monthlyCalendarBox_showPublicAppointments,monthlyCalendarBox_showBirthdaysInAppointments,monthlyCalendarBox_maxAppointments</enableoptions>
			</option>
			<option name="monthlyCalendarBox_showAppointmentsAsDefault">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="monthlyCalendarBox_showPublicAppointments">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="monthlyCalendarBox_showBirthdaysInAppointments">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="monthlyCalendarBox_maxAppointments">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>10</defaultvalue>
				<selectoptions><![CDATA[5
10
15
20
25
30]]></selectoptions>
			</option>
			<option name="monthlyCalendarBox_showHolidays">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>monthlyCalendarBox_showHolidaysFrom</enableoptions>
			</option>
			<option name="monthlyCalendarBox_showHolidaysFrom">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>select</optiontype>
				<defaultvalue>DE</defaultvalue>
				<selectoptions><![CDATA[DE
AT
CH
FR
NL]]></selectoptions>
			<option name="monthlyCalendarBox_showBirthdays">
				<categoryname>settings.display.monthlyCalendarBox</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
		</options>
	</import>
</data>
