<?xml version="1.0"?>
<!DOCTYPE data SYSTEM "http://www.woltlab.com/DTDs/options.dtd">
<!-- $Id$ -->
<data>
	<import>
		<categories>
			<category name="settings.userGuestbook">
				<parent>settings</parent>
				<menuicon>icon/guestbookS.png</menuicon>
				<icon>icon/guestbookM.png</icon>
			</category>
			<category name="settings.userGuestbook.global">
				<parent>settings.userGuestbook</parent>
				<showorder>0</showorder>
			</category>
		</categories>

		<options>
			<option name="userGuestbook_enable">
				<categoryname>settings.userGuestbook.global</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>userGuestbook_enable_posting,userGuestbook_sendInfo,userGuestbook_sendPM,userGuestbook_sendCommentPM</enableoptions>
			</option>
			<option name="userGuestbook_enable_posting">
				<categoryname>settings.userGuestbook.global</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="userGuestbook_sendInfo">
				<categoryname>settings.userGuestbook.global</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="userGuestbook_sendPM">
				<categoryname>settings.userGuestbook.global</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>

			<option name="userGuestbook_sendCommentPM">
				<categoryname>settings.userGuestbook.global</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
		</options>
	</import>
</data>
