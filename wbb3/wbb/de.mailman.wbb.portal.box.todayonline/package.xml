<?xml version="1.0"?>
<!DOCTYPE package SYSTEM "DTD/package.dtd">
<package name="de.mailman.wbb.portal.box.todayonlinebox">
	<packageinformation>
		<packagename lang="de">Portalbox &quot;Heute online&quot;</packagename>
        <packageDescription>
            &quot;Wer war heute online?&quot; zeigt alle Benutzer an, welche am aktuellen Tag online waren.
            <br/>Optional können auch noch die aktuellen Benutzer angezeigt werden. Der Titel der Box ändert sich dann nach &quot;Heute online&quot;.
        </packageDescription>
		<standalone>0</standalone>
		<plugin>com.woltlab.wbb</plugin>
		<version>1.0.3</version>
		<date>2008-05-18</date>
	</packageinformation>

	<authorinformation>
		<author>MailMan</author>
		<authorurl>http://wbb3addons.ump2002.net</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="1.0.0">de.wbb3mods.wbb.portal</requiredpackage>
		<requiredPackage minversion="1.0.0">de.woltlab.community.wcf.userswasonline</requiredPackage>
		<requiredPackage minversion="1.0.0">de.woltlab.community.wbb.wwo</requiredPackage>
	</requiredpackages>

	<instructions type="install">
		<files>files.tar</files>
		<templates>templates.tar</templates>
		<portalbox>portalbox.xml</portalbox>
		<useroptions>useroptions.xml</useroptions>
		<options>options.xml</options>
		<languages languagecode="de">de.xml</languages>
		<languages languagecode="de-informal">de-informal.xml</languages>
		<languages languagecode="en">en.xml</languages>
	</instructions>

	<instructions type="update" fromversion="1.0.2">
		<templates>templates.tar</templates>
		<options>options.xml</options>
		<languages languagecode="de">de.xml</languages>
		<languages languagecode="de-informal">de-informal.xml</languages>
		<languages languagecode="en">en.xml</languages>
	</instructions>
</package>
