<?xml version="1.0"?>
<!DOCTYPE package SYSTEM "http://www.woltlab.com/DTDs/package.dtd">
<package name="net.hawkes.admintools.wbb3.functions">
    <packageinformation>
        <packagename>AdminTools 2 WBB 3 Functions</packagename>
        <packagename language="de">AdminTools 2 WBB 3 Funktionen</packagename>
        <packagename language="de-informal">AdminTools 2 WBB 3 Funktionen</packagename>
        <packagedescription>This is a set of functions for the WoltLab Burning Board 3. Included Functions: Copy board prefixes, Cleanup subscriptions</packagedescription>        
        <packagedescription language="de"><![CDATA[Dieses Paket beinhaltet Funktionen, die ausschließlich im WoltLab Burning Board 3 funktionieren. Enthaltene Funktionen: Forenpräfixe kopieren, Abonnements löschen]]></packagedescription>
        <packagedescription language="de-informal"><![CDATA[Dieses Paket beinhaltet Funktionen, die ausschließlich im WoltLab Burning Board 3 funktionieren. Enthaltene Funktionen: Forenpräfixe kopieren, Abonnements löschen]]></packagedescription>
        <version>1.0.0 RC 1</version>
        <date>2009-02-18</date>
        <standalone>0</standalone>        
        <plugin>com.woltlab.wbb</plugin>              
        <packageurl>http://www.wbb3addons.de</packageurl>
    </packageinformation>

    <authorinformation>
        <author>Oliver Kliebisch</author>
        <authorurl>http://www.oliver-kliebisch.de</authorurl>
    </authorinformation>

    <requiredpackages>
        <requiredPackage>com.woltlab.wcf</requiredPackage>
        <requiredPackage>net.hawkes.admintools</requiredPackage>
